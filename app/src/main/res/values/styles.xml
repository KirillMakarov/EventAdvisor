<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:paddingBottom">@dimen/standard_material_padding</item>
        <item name="android:paddingLeft">@dimen/standard_material_padding</item>
        <item name="android:paddingRight">@dimen/standard_material_padding</item>
        <item name="android:paddingTop">@dimen/extra_material_padding</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
